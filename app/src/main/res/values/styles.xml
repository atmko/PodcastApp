<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Image_Style">
        <item name="android:background">@color/color_unloaded_image</item>
    </style>

    <style name="Podcast_Feature_Image_Style" parent="Image_Style">

    </style>

    <style name="Profile_Image_Style" parent="Image_Style">
        <item name="android:background">@drawable/circular_mask</item>
    </style>

    <style name="Standard_Heading_Style">
        <item name="android:textColor">@android:color/black</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="Large_Heading_Style">
        <item name="android:textSize">@dimen/headline_1_text_size</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="Body_Style">
        <item name="android:textSize">@dimen/body_text_size</item>
        <item name="android:textColor">@color/color_body_text</item>
    </style>

    <style name="Caption_Style">
        <item name="android:textSize">@dimen/caption_text_size</item>
        <item name="android:textColor">@color/color_text_subtext</item>
    </style>

    <style name="Caption_Style_Accented" parent="Caption_Style">
        <item name="android:textSize">@dimen/caption_text_size</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="style_standard_search_box">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">@dimen/x1_layout_margin</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginStart">@dimen/x2_layout_margin</item>
        <item name="android:layout_marginRight">@dimen/x1_layout_margin</item>
        <item name="android:layout_marginEnd">@dimen/x1_layout_margin</item>
        <item name="android:layout_marginBottom">@dimen/x1_layout_margin</item>
        <item name="android:hint">@string/search_text_box_hint</item>
        <item name="android:paddingLeft">@dimen/search_box_padding</item>
        <item name="android:paddingStart">@dimen/search_box_padding</item>
        <item name="android:paddingRight">@dimen/search_box_padding</item>
        <item name="android:paddingEnd">@dimen/search_box_padding</item>
        <item name="android:inputType">text</item>
        <item name="android:textCursorDrawable">@drawable/toolbar_search_box_cursor</item>
        <item name="android:background">@null</item>
        <item name="android:imeOptions">actionSearch|flagNoExtractUi|flagNoFullscreen</item>
    </style>

    <style name="Divider_Style">
        <item name="android:background">@color/color_divider</item>
    </style>

    <style name="Tab_Style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_height">match_parent</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabIndicatorHeight">3.5dp</item>
        <item name="tabMode">scrollable</item>
    </style>

</resources>
