<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/podcastImageView"
        style="@style/Podcast_Feature_Image_Style"
        android:layout_width="@dimen/item_podcast_square_size"
        android:layout_height="@dimen/item_podcast_square_size"
        android:contentDescription="@string/content_description_podcast_feature_image" />

    <ImageButton
        android:id="@+id/actionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/x1_layout_margin"
        android:background="@null"
        android:contentDescription="@string/content_description_subscribe_button"
        android:src="@drawable/ic_subscribe_button" />

</FrameLayout>